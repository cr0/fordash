if forensic.log
	h3 Logfile f√ºr #{forensic.log.name}

	div.filter
		a(href="#", data-timeline="phone").active
			i.fa.fa-phone
			| Telefonate
		a(href="#", data-timeline="message").active
			i.fa.fa-envelope
			| Nachrichten
		a(href="#", data-timeline="whatsapp").active
			i.fa.fa-comments
			| Whatsapp

	ul.lines
		- each line in forensic.log.lines
			li
				case line.type
					when 'CALL_INCOMING'
						i.fa.fa-phone
						i.fa.fa-arrow-left
					when 'CALL_OUTGOING'
						i.fa.fa-phone
						i.fa.fa-arrow-right
					when 'CALL_MISSED'
						i.fa.fa-phone
						i.fa.fa-reply
					when 'MSG_INCOMING_MMS'
						i.fa.fa-envelope
						i.fa.fa-picture-o
						i.fa.fa-arrow-left
					when 'MSG_OUTGOING_MMS'
						i.fa.fa-envelope
						i.fa.fa-picture-o
						i.fa.fa-arrow-right
					when 'MSG_INCOMING_SMS'
						i.fa.fa-envelope
						i.fa.fa-arrow-left
					when 'MSG_OUTGOING_SMS'
						i.fa.fa-envelope
						i.fa.fa-arrow-right
					when 'MSG_INCOMING_WA_TEXT'
						i.fa-comments
						i.fa.fa-arrow-left
					when 'MSG_OUTGOING_WA_TEXT'
						i.fa.fa-comments
						i.fa.fa-arrow-right
					when 'MSG_INCOMING_WA_PIC'
						i.fa-comments
						i.fa.fa-picture-o
						i.fa.fa-arrow-left
					when 'MSG_OUTGOING_WA_PIC'
						i.fa.fa-comments
						i.fa.fa-picture-o
						i.fa.fa-arrow-right
					when 'MSG_INCOMING_WA_VIDEO'
						i.fa-comments
						i.fa.fa-video-camera
						i.fa.fa-arrow-left
					when 'MSG_OUTGOING_WA_VIDEO'
						i.fa.fa-comments
						i.fa.fa-video-camera
						i.fa.fa-arrow-right
					when 'MSG_OUTGOING_WA_AUDIO'
						i.fa-comments
						i.fa.fa-volume-up
						i.fa.fa-arrow-left
					when 'MSG_OUTGOING_WA_AUDIO'
						i.fa.fa-comments
						i.fa.fa-volume-up
						i.fa.fa-arrow-right
					default
						i.fa.fa-exclamation-circle
						span= line.type
				span.date &mdash; #{line.formatted_date}
				div.message= line.message