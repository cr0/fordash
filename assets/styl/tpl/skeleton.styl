div#skeleton
  height: 100%
  width: 100%
  white-space: nowrap

  article
    height: 100%
    width: 100%
    white-space: normal

    &:nth-child(odd)
      //background-color: #ecf0f1

    & > div
      width: 800px
      margin: 0 auto
      padding: 3em 0

  nav 
    padding: 0

    dl dd
      background-color: gray
      width: $nav-item-width
      height: 2.7em
      margin: 0
      transition: height 0.6s ease-in-out

      a 
        width: 100%
        height: 100%
        color: white
        font-weight: 100
        font-size: 2.3em
        padding: 0 0 0 0.2em
        transition: color 0.6s ease-in-out

    dl dd.active 
      background-color: lighten(gray, $nav-lightener-multi)

      a
        border-radius: 0
        background: none

  nav.fixed dl dd
    height: 0.6em

    a
      color: transparent