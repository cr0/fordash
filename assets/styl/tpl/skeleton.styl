div#skeleton
  height: 100%
  width: 100%
  white-space: nowrap

  .off-canvas-wrap, .inner-wrap, .main-section
    height: 100%
  .main-section
    overflow-y: auto

  article
    min-height: 100%
    width: 100%
    white-space: normal
    padding: 3em 0

    &:nth-child(odd)
      //background-color: #ecf0f1

    & > div
      width: $page-width-std
      margin: 0 auto
      padding: 3em 0

    @media screen and (min-width: 1300px)
      & > div
        width: $page-width-huge

  nav
    padding: 0

    dl dd
      background-color: gray
      width: $nav-item-width
      height: 2.7em
      margin: 0
      transition: height 0.6s ease-in-out

      &.dump
        width: $nav-dump-width
        cursor: pointer

      a
        width: 100%
        height: 100%
        color: white
        font-weight: 100
        font-size: 2.3em
        padding: 0 0 0 0.2em
        transition: color 0.6s ease-in-out

    dl dd.active
      background-color: lighten(gray, $nav-lightener-multi)

      a
        border-radius: 0
        background: none

  nav.fixed dl dd
    height: 0.6em

    a
      color: transparent

  nav.tab-bar
    background-color: transparent
    height: auto
    line-height: auto

  aside.left-off-canvas-menu
    width: 500px

.move-right > .inner-wrap
  transform(translate3d(500px, 0, 0))
