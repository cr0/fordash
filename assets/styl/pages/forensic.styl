dd.forensic
	background-color: $color-highlight-forensic !important

	&.active
		background-color: lighten($color-highlight-forensic, $nav-lightener-multi) !important

article#forensic
	background-color: $color-highlight-forensic
	color: #fff !important

	h2
		color: #fff

	& > div > div
		margin: 0 0 2em 0

	div.results
		color: white

		h4
			margin: 1em 0 0 0

		ul.results
			margin: 1em 0 0 0
			list-style-type: none

			& > li
				margin-bottom: 1em

		ul.items
			list-style-type: square

			li a
				color: white

	div.picture-options
		color: white

		i
			cursor: pointer

	div.wordsearch input.word,
	div.timestamp input.datetime
			font-size: 1.7em
			background-color: transparent
			box-shadow: none
			border: 0
			border-bottom: 1px solid black
			width: 100%
			font-weight: 100
			margin: 0

	div.websites

		ul.websites
			list-style-type: none
			margin: 0

			li
				position: relative

				div, span
					line-height: 1.6em
					height: 2.1em

				div.percentage
					background-color: white
					float: left
					position: absolute
					top: 0
					left: 0
					z-index: 10

				div.name
					color: black
					z-index: 25
					position: relative
					padding: 0 0.4em
					font-size: 1.3em
					font-weight: 200

			ul.details
				list-style-type: square
				display: none

				li a
					color: white

	div.pictures
		div.map
			width: 100%
			height: 30em
			border: 0.3em white solid

		div.picturegrid
			line-height: 0
			column-count: 5
			column-gap: 0px

			img
				width: 100% !important
				height: auto !important
