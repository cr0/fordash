dd.forensic
	background-color: $color-highlight-forensic !important

	&.active
		background-color: lighten($color-highlight-forensic, $nav-lightener-multi) !important

article#forensic
	background-color: $color-highlight-forensic
	color: #fff !important

	h2
		color: #fff

	& > div > div
		margin: 0 0 2em 0

	div.details
		
		.row
			display: inline-block
			width: 29%
			vertical-align: top

		ul.numbers
			font-size: 1.5em
			list-style-type: none
			margin: 0
			width: 40%

			li i 
				width: 1.5em
				
		div.phone, div.messages
			text-align: right

			i
				margin: 0 0 0 0.4em

			div.in span
				font-size: 2.6em

			div.out span
				font-size: 3.2em

		div.average
			height: 4em

	div.log
		
		ul.lines
			max-height: 35em
			overflow: auto
			margin: 0

			li
				margin-bottom: 0.7em

	div.wordsearch

		input.word
			font-size: 1.7em
			background-color: transparent
			box-shadow: none
			border: 0
			border-bottom: 1px solid black
			width: 100%
			font-weight: 100

		div.messages
			color: white

			h4
				margin: 2em 0 0 0

			ul.results
				margin: 1em 0 0 0
				list-style-type: none

				& > li 
					margin-bottom: 1em

			ul.messages
				list-style-type: square

				li a
					color: white