dd.forensic
	background-color: $color-highlight-forensic !important

	&.active
		background-color: lighten($color-highlight-forensic, $nav-lightener-multi) !important

article#forensic
	background-color: $color-highlight-forensic
	color: #fff !important

	h2
		color: #fff

	& > div > div
		margin: 0 0 2em 0

	div.results
		color: white

		h4
			margin: 1em 0 0 0

		ul.results
			margin: 1em 0 0 0
			list-style-type: none

			& > li 
				margin-bottom: 1em

		ul.items
			list-style-type: square

			li a
				color: white

	div.wordsearch input.word, 
	div.timestamp input.datetime
			font-size: 1.7em
			background-color: transparent
			box-shadow: none
			border: 0
			border-bottom: 1px solid black
			width: 100%
			font-weight: 100
			margin: 0