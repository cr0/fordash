dd.contact
	background-color: $color-highlight-contact !important

	&.active
		background-color: lighten($color-highlight-contact, $nav-lightener-multi) !important

article#contact

	div.top, div.special
		vertical-align: top
		display: inline-block
		margin: 2em 0 0 0

	div.top
		width: 60%

		ul.topcontacts
			list-style-type: none
			margin: 0

			li
				position: relative

				div, span
					line-height: 1.6em
					height: 2.1em
					
				div.percentage
					background-color: $color-highlight-contact
					float: left
					position: absolute
					top: 0
					left: 0
					z-index: 10

				div.name
					color: black
					z-index: 25
					position: relative
					padding: 0 0.4em
					font-size: 1.3em
					font-weight: 200

				div.minutes, div.messages
					margin: 0 1em 0 0
					text-align: right
					font-size: 0.8em
					height: 1.1em

					span
						display: inline-block
						width: 6em

				span > i
					margin-left: 0.3em

				div.stats
					position: absolute
					right: 0
					top: 0
					float: right

	div.special
		width: 37%
		font-weight: normal 
		margin-left: 2%

		div.info
			font-size: 80%
			color: lighten(#000, 15)

	div.details
		margin-top: 4em

		.row
			display: inline-block
			width: 29%
			vertical-align: top
			margin-bottom: 2em

		ul.numbers
			font-size: 1.5em
			list-style-type: none
			margin: 0
			width: 40%

			li i 
				width: 1.5em
				
		div.phone, div.messages
			text-align: right

			i
				margin: 0 0 0 0.4em

			div.in span
				font-size: 2.6em
				color: $color-highlight-contact

			div.out span
				font-size: 3.2em
				color: $color-highlight-contact

		div.average
			height: 4em

		div.info
			font-size: 0.7em
			font-weight: normal

	div.log
		margin-top: 4em

		div.filter
			margin: 0 0 2em

			& > a
				margin-right: 2em
				color: black

		ul.lines
			max-height: 35em
			overflow: auto
			margin: 0
			list-style-type: none
			padding: 0 0 3em 0
			border-bottom: 3px solid $color-highlight-contact
			font-weight: normal
			font-size: 0.8em

			li
				margin-bottom: 0.7em