dd.contact
	background-color: $color-highlight-contact !important

	&.active
		background-color: lighten($color-highlight-contact, $nav-lightener-multi) !important

article#contact

	div.top
		margin: 2em 0 0 0

		ul.topcontacts
			list-style-type: none
			margin: 0

			li
				position: relative

				div, span
					line-height: 1.6em
					height: 2.1em
					
				div.percentage
					background-color: $color-highlight-contact
					float: left
					position: absolute
					top: 0
					left: 0
					z-index: 10

				div.name
					color: black
					z-index: 25
					position: relative
					padding: 0 0.4em
					font-size: 1.3em
					font-weight: 200

				div.minutes, div.messages
					margin: 0 1em 0 0
					text-align: right
					font-size: 0.8em
					height: 1.1em

					span
						display: inline-block
						width: 6em

				span > i
					margin-left: 0.3em

				div.stats
					position: absolute
					right: 0
					top: 0
					float: right