dd.timeline
	background-color: $color-highlight-timeline !important

	&.active
		background-color: lighten($color-highlight-timeline, $nav-lightener-multi) !important

article#timeline
	background-color: $color-highlight-timeline
	color: #fff !important

	a.active
		font-weight: bold

	h2
		color: #fff

	div.filter
		margin: 0 0 2em 0
		
		a
			color: #000 !important

			&:hover
				color: lighten(#000, 15) !important

		h5.direction a
			margin: 0 1em 0 0

	div.history
		height: 40em

	div.timechart
		width: 100%
		height: 30em

		& > div
			height: 25em
			width: 100%

	div.chart
		height: 100%
		width: 75%
		display: inline-block

		& > div
			height: 100%
			width: 100%

	div.info
		display: inline-block
		width: 24%
		vertical-align: top

		h3
			color: white
			font-weight: 100

		div
			font-size: 1.4em
			margin: 1em 0 0 0 
			font-weight: normal