dd.timeline
	background-color: $color-highlight-timeline !important

	&.active
		background-color: lighten($color-highlight-timeline, $nav-lightener-multi) !important

article#timeline
	background-color: $color-highlight-timeline
	color: #fff !important

	a.active
		font-weight: bold

	h2
		color: #fff

	div.filter
		margin: 0 0 2em 0
		
		a
			color: #000 !important

			&:hover
				color: lighten(#000, 15) !important

		h5.direction a
			margin: 0 1em 0 0

		h5.contact input
			background-color: transparent
			border: none
			border-bottom: 1px solid lighten(#000, 30)
			min-width: 20em
				

	div.history
		height: 40em

	div.timechart
		width: 100%
		height: 30em

		& > div
			height: 25em
			width: 100%

	div.chart
		height: 100%
		width: 75%
		display: inline-block

		& > div
			height: 100%
			width: 100%

	div.info
		display: inline-block
		width: 24%
		vertical-align: top

		h3
			color: white
			font-weight: 100

		div
			font-size: 1.4em
			margin: 1em 0 0 0 
			font-weight: normal

	div.history
		
		div.filter
			color: black
			margin: 0 0 2em

			& > a
				margin-right: 2em

			input
				background-color: transparent
				box-shadow: none
				border: 0
				font-weight: bold
				display: inline
				width: auto
				font-size: inherit
				
			input[type="date"]:hover::-webkit-calendar-picker-indicator
				color: red
				background-color: transparent

			// input[type="date"]:hover:after
			// 	content: " Kalendar anzeigen "
			// 	color: #555
			// 	padding-right: 5px

			input[type="date"]::-webkit-inner-spin-button
					/* display: none <- Crashes Chrome on hover */
					-webkit-appearance: none
					margin: 0