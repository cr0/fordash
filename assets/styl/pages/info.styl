dd.info
	background-color: $color-highlight-info !important

	&.active
		background-color: lighten($color-highlight-info, $nav-lightener-multi) !important

article#info
	min-height: 0 !important
	background-color: transparent !important
	padding: 0 !important

	h1, h2
		display: inline-block
		text-transform: lowercase
		font-size: 2.75em
		margin-bottom: 0

	h1
		font-weight: 100

	h2
		font-weight: bold

	div#dumpid
		color: darken(#fff, 30)
